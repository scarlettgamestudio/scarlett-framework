{
  "name": "@scarlett-game-studio/scarlett-framework",
  "shortName": "scarlett-framework",
  "version": "0.0.3-alpha",
  "description": "Scarlett WebGL Graphics Framework",
  "main": "build/umd/scarlett-framework.js",
  "dependencies": {
    "axios": "0.17.1",
    "axios-mock-adapter": "1.12.0",
    "babel-runtime": "6.26.0",
    "flow-runtime": "^0.16.0",
    "lodash": "4.17.4",
    "matter-js": "^0.10.0",
    "parse-bmfont-ascii": "1.0.6",
    "parse-bmfont-xml": "1.1.3",
    "scarlett-msdf-bmfont-xml": "2.3.6",
    "util.promisify": "1.0.0"
  },
  "scripts": {
    "start": "http-server -a localhost -p 8080 -c-1",
    "default-build": "webpack --config config/_webpack.config.js",
    "build": "yarn default-build -d",
    "build:editor": "yarn build --env.target=editor",
    "build:deploy": "cross-env NODE_ENV=production yarn default-build -p",
    "build:deploy:editor": "cross-env NODE_ENV=production yarn default-build --env.target=editor --env.addons=uglifyes6",
    "debug": "cross-env NODE_ENV=production node --inspect-brk ./node_modules/webpack/bin/webpack.js --config config/_webpack.config.js -p",
    "build:all": "rimraf build && run-p build build:editor build:deploy build:deploy:editor",
    "build:addon:analyze": "yarn build --env.addons=bundleanalyze",
    "build:addon:circular": "yarn build --env.addons=circulardependency",
    "live-server": "webpack-dev-server -d --port 8080 --progress --colors --hot --config config/_webpack.config.js",
    "live-server:editor": "yarn live-server --env.target=editor",
    "live-server:deploy": "cross-env NODE_ENV=production yarn live-server",
    "watch": "yarn build -w",
    "watch:build:editor": "yarn watch --env.target=editor",
    "watch:build:deploy": "cross-env NODE_ENV=production yarn watch",
    "test": "jest --coverage",
    "watch:test": "cross-env CI=true jest --watch",
    "report-coverage": "codecov",
    "semantic-release": "semantic-release pre && npm publish --access=public && semantic-release post",
    "commit": "git-cz",
    "commitmsg": "opt --in commit-msg --exec \"validate-commit-msg\"",
    "precommit": "lint-staged && opt --in pre-commit --exec \"yarn run test && yarn run build\"",
    "format": "prettier-eslint --write \"src/**/*.js\"",
    "lint": "eslint .",
    "validate": "run-p lint test build:all"
  },
  "devDependencies": {
    "@types/jest": "20.0.1",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-eslint": "8.0.0",
    "babel-jest": "20.0.3",
    "babel-loader": "7.1.2",
    "babel-plugin-flow-runtime": "^0.15.0",
    "babel-plugin-lodash": "3.2.11",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-env": "1.6.0",
    "babel-preset-flow": "6.23.0",
    "babel-preset-stage-3": "6.24.1",
    "circular-dependency-plugin": "3.0.0",
    "codecov": "2.3.0",
    "commitizen": "2.9.6",
    "cross-env": "5.0.0",
    "cz-conventional-changelog": "2.0.0",
    "eslint": "4.7.0",
    "eslint-import-resolver-webpack": "0.8.3",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-jest": "21.1.0",
    "flow-bin": "0.63.1",
    "http-server": "0.10.0",
    "husky": "0.13.4",
    "jest": "20.0.4",
    "lint-staged": "4.2.1",
    "lodash-webpack-plugin": "0.11.4",
    "npm-run-all": "4.0.2",
    "opt-cli": "1.5.1",
    "prettier-eslint-cli": "4.3.2",
    "rimraf": "2.6.1",
    "semantic-release": "6.3.6",
    "uglifyjs-webpack-plugin": "1.1.8",
    "validate-commit-msg": "2.12.1",
    "webpack": "3.6.0",
    "webpack-bundle-analyzer": "2.9.0",
    "webpack-dev-server": "2.8.2",
    "webpack-merge": "4.1.1",
    "webpack-notifier": "1.5.0"
  },
  "files": [
    "build",
    "README.md"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "es6": true,
      "jest/globals": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "plugins": [
      "jest"
    ],
    "rules": {
      "no-console": 0,
      "max-len": [
        "error",
        120
      ]
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "config/_webpack.config.js"
        }
      }
    }
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "setupFiles": [],
    "mapCoverage": true,
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleNameMapper": {
      "scarlett-msdf-bmfont-xml": "<rootDir>/__mocks__/msdfMock.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(js|jsx)$",
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "!src/**/index.js",
      "src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "globals": {
      "window": false
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scarlettgamestudio/scarlett-framework.git"
  },
  "author": "João Alves <joao.cpp.sca@gmail.com> and Luís Fernandes aka Apidcloud <luisapidcloud@hotmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/scarlettgamestudio/scarlett-framework/issues"
  },
  "homepage": "https://github.com/scarlettgamestudio/scarlett-framework#readme"
}
